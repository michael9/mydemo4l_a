<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightgray" >

    <com.cqvip.moblelib.view.mylinearlayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.cqvip.moblelib.view.ScaleImageView
            android:id="@+id/main02_iv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_marginleftright"
            android:layout_marginRight="@dimen/main_marginleftright"
            android:layout_marginTop="@dimen/main_marginleftright"
            android:src="@drawable/main_04" />

        <RelativeLayout
            android:id="@+id/searchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_marginleftright"
            android:layout_marginRight="@dimen/main_marginleftright"
            android:layout_marginTop="@dimen/main_marginleftright"
            android:background="@drawable/search_bar"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/ebook_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:ems="10"
                android:hint="请输入关键词搜索"
                android:maxLines="2" />

            <ImageView
                android:id="@+id/ebook_seach_img"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@drawable/eg_search" />
        </RelativeLayout>

        <ListView
            android:id="@+id/ebook_search_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/main_margintop"
        android:layout_marginLeft="@dimen/main_marginleftright"
        android:layout_marginRight="@dimen/main_marginleftright"
        android:layout_marginTop="@dimen/main_marginleftright"
            android:background="@drawable/linearlayout_shape1"
            android:divider="@color/divider_color"
            android:dividerHeight="1dp" android:paddingLeft="5dp"
        android:paddingRight="5dp">
        </ListView>
    </com.cqvip.moblelib.view.mylinearlayout>

    <ImageView
        android:id="@+id/return_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:src="@drawable/retunsign" />

</RelativeLayout>