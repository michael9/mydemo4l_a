<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/bg_list"
  >
    

  <ImageView   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/buttom_log_img"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="8dp"
    />

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookSearchActivity" >

   <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/top"
    android:focusable="true"  
    android:focusableInTouchMode="true"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_back_header"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dip"
        android:background="@drawable/btn_back" />

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end" 
        android:singleLine="true" android:maxEms="6"
        android:text="@string/main_guide"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="20sp" 
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/scan_iv"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="9dip"
        android:layout_height="32dp"
        android:src="@drawable/btn_selector_scan"
        />


</RelativeLayout>
    <include
        android:id="@+id/search_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        layout="@layout/search_bar_layout" />
        
    </LinearLayout>

    <ListView
        android:id="@+id/choice_check_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:background="@drawable/linearlayout_shape1"
        android:visibility="gone" >
    </ListView>

</RelativeLayout>