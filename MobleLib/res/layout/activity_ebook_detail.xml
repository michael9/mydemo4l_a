<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list" >

        <include
            android:id="@+id/head_bar"
            layout="@layout/header" />

        <!-- 图书 -->

        <RelativeLayout
            android:id="@+id/detail_up_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_bar" >

            <ImageView
                android:id="@+id/ebook_icon_img"
                android:layout_width="82dp"
                android:layout_height="118dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:id="@+id/lyRightLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_toRightOf="@+id/ebook_icon_img"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <!-- title -->

                    <TextView
                        android:id="@+id/ebook_title_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="编程的艺术"
                        android:textColor="@color/txt_black"
                        android:textSize="18.0sp" />
                </RelativeLayout>
                <!-- author -->

                <TextView
                    android:id="@+id/ebook_author_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:text="作者：托马斯"
                    android:textColor="@color/txt_black"
                    android:textSize="14.0sp" />
                <!-- address -->

                <TextView
                    android:id="@+id/ebook_from_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="来源期刊：电子工业出版社"
                    android:textColor="@color/txt_black"
                    android:textSize="14.0sp" />
                <!-- time -->

                <TextView
                    android:id="@+id/ebook_time_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="来源期刊：电子工业出版社"
                    android:textColor="@color/txt_black"
                    android:textSize="14.0sp" />
                <!-- page -->

                <TextView
                    android:id="@+id/ebook_page_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="页数："
                    android:textColor="@color/txt_black"
                    android:textSize="14.0sp" />
                <!-- size -->

                <TextView
                    android:id="@+id/ebook_type_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="格式：2012-06"
                    android:textColor="@color/txt_black"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_abstract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_up_rl"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <TextView
                android:id="@+id/ebook_content_abst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/txt_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_abstract"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_ebook_detail_great"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:focusable="false"
                android:text="赞"
                android:textColor="@color/green_light"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_ebook_detail_buzz"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:focusable="false"
                android:text="评"
                android:textColor="@color/green_light" />

            <Button
                android:id="@+id/btn_ebook_detail_collect"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:focusable="false"
                android:text="收藏"
                android:textColor="@color/green_light" />

            <Button
                android:id="@+id/btn_ebook_detail_share"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:focusable="false"
                android:text="分享"
                android:textColor="@color/green_light" />

            <Button
                android:id="@+id/btn_ebook_detail_download"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:focusable="false"
                android:text="下载"
                android:textColor="@color/green_light" />
        </LinearLayout>
