<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top" >

    <ImageView
        android:id="@+id/ad_book_img"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/defaut_book" />

    <TextView
        android:id="@+id/ad_booktitle_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/ad_book_img"
        android:layout_alignStart="@id/ad_book_img"
        android:layout_below="@id/ad_book_img"
        android:background="@drawable/LightSkyBlue"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="哈哈哈哈哈哈"
        android:textSize="16sp" />

</RelativeLayout>