<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top" >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/silvergray" >

        <ImageView
            android:id="@+id/defaut_book_img"
            android:layout_width="200dp"
            android:layout_height="238dp"
            android:scaleType="fitCenter"
            android:src="@drawable/clock_dial" />

        <com.cqvip.moblelib.view.NetworkImageView_rotate
            android:id="@+id/loaded_book_img"
            android:layout_width="200dp"
            android:layout_height="238dp"
            android:scaleType="centerCrop"
            android:visibility="invisible" />
    </FrameLayout>

    <TextView
        android:id="@+id/ad_booktitle_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/container"
        android:layout_alignStart="@id/container"
        android:layout_below="@id/container"
        android:background="@drawable/LightSkyBlue"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="哈哈哈哈哈哈"
        android:textSize="16sp" />

</RelativeLayout>