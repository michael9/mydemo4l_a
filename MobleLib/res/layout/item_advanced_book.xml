<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top" >
<LinearLayout android:layout_width="fill_parent" android:id="@+id/ll_container"
        android:layout_height="wrap_content" android:background="@drawable/LightSkyBlue">
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="@color/white" android:layout_margin="3dp">

        <ImageView
            android:id="@+id/defaut_book_img"
            android:layout_width="@dimen/image_thumbnail_size"
            android:layout_height="@dimen/image_thumbnail_heightsize"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/silvergray"
            android:scaleType="fitCenter" />

        <com.cqvip.moblelib.view.NetworkImageView_rotate
            android:id="@+id/loaded_book_img"
            android:layout_width="@dimen/image_thumbnail_size"
            android:layout_height="@dimen/image_thumbnail_heightsize"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:visibility="invisible" />
    </FrameLayout>
</LinearLayout>
    <TextView
        android:id="@+id/ad_booktitle_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/ll_container"
        android:layout_alignStart="@id/ll_container"
        android:layout_below="@id/ll_container"
        android:background="@drawable/LightSkyBlue"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="哈哈哈哈哈哈"
        android:textSize="16sp" />

</RelativeLayout>