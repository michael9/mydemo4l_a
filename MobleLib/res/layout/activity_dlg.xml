<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90ffffff"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/msg_box_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dlg_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/msg_box_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="MESSAGE"
            android:textColor="@color/txt_black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dlg_cancel_btn"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:background="@drawable/btn_dlg"
                android:text="取消" />

            <Button
                android:id="@+id/dlg_ok_btn"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_dlg"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/log_in_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dlg_bg"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读者登陆"
                android:textColor="@color/txt_black"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借阅卡号:"
                    android:textColor="@color/txt_black"
                    android:textSize="16dp" />

                <AutoCompleteTextView
                    android:id="@+id/log_in_username"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借阅密码:"
                    android:textColor="@color/txt_black"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/log_in_passwords"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:password="true"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/login_cancel_btn"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:background="@drawable/btn_dlg"
                    android:text="取消" />

                <Button
                    android:id="@+id/login_ok_btn"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_dlg"
                    android:text="登陆" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>