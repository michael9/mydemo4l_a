<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:tag="itemview" >

    <!-- 图书 -->

    <RelativeLayout
        android:id="@+id/up_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/re_book_img"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@android:color/transparent"
            android:saveEnabled="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/lyRightLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:layout_toRightOf="@+id/re_book_img"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/childLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <!-- title -->

                <TextView
                    android:id="@+id/re_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="编程的艺术"
                    android:textColor="#ff333333"
                    android:textSize="18.0sp" />

                <!-- author -->

                <TextView
                    android:id="@+id/re_author_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:singleLine="true"
                    android:text="作者：托马斯"
                    android:textColor="@color/txt_black"
                    android:textSize="14.0sp" />

                <!-- address -->

                <TextView
                    android:id="@+id/re_addr_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="出版社：电子工业出版社"
                    android:textColor="@color/txt_black"
                    android:textSize="14.0sp" />

                <!-- time -->

                <TextView
                    android:id="@+id/re_time_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="年份：2012-06"
                    android:textColor="@color/txt_black"
                    android:textSize="14.0sp" />

                <!-- page -->

                <TextView
                    android:id="@+id/re_hot_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="页数："
                    android:textColor="@color/txt_black"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <Button
                android:id="@+id/favor_cancel"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="bottom"
                android:background="@drawable/icon_stop"
                android:focusable="false" android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_abst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up_rl"
        android:layout_margin="5dp"
        android:maxLines="3"
        android:text="图书介绍"
        android:textColor="@color/txt_black" />
