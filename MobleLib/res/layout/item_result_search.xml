<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout  
    android:tag="itemview" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
  <!--图书-->
    <ImageView
        android:background="@android:color/white"
        android:padding="2dp"
         android:id="@+id/re_book_img"  android:saveEnabled="true" 
        android:layout_width="wrap_content" android:layout_height="wrap_content"
         android:layout_marginLeft="5.0dip" android:layout_marginTop="5.0dip"
          android:layout_alignParentTop="true" android:layout_alignParentLeft="true" 
           android:layout_alignBottom="@+id/lyRightLayout"
           android:src="@drawable/defaut_book" />
     <LinearLayout android:layout_toRightOf="@+id/re_book_img"  android:orientation="vertical" android:id="@+id/lyRightLayout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="5.0dip" >
        <RelativeLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" >
        	 <!--title-->
            <TextView android:textSize="18.0sp" 
                android:singleLine="true"   
                android:textColor="#ff333333" 
                android:id="@+id/re_name_txt" 
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="编程的艺术" />
            
        </RelativeLayout>
        <!--author-->
        <TextView android:textSize="14.0sp" android:textColor="#ff414951" android:id="@+id/re_author_txt" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip" android:text="作者：托马斯" />
       <!--address-->
        <TextView android:textSize="14.0sp" android:textColor="#ff414951" android:id="@+id/re_addr_txt" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:text="出版社：电子工业出版社" />
        <!--time-->
        <TextView android:textSize="14.0sp" android:textColor="#ff414951" android:id="@+id/re_time_txt" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:text="年份：2012-06" />
        <!--time-->
        <TextView android:textSize="14.0sp" 
            android:textColor="#ff414951" 
            android:id="@+id/re_hot_txt" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"  
            android:maxLines="2"
            android:text="页数：" />

      
    </LinearLayout>
</RelativeLayout> 