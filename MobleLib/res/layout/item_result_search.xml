<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:tag="itemview" >

    <!-- 图书 -->

    <ImageView
        android:id="@+id/re_book_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lyRightLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@android:color/white"
        android:padding="2dp"
        android:saveEnabled="true"
        android:src="@drawable/defaut_book" />

    <LinearLayout
        android:id="@+id/lyRightLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:layout_toRightOf="@+id/re_book_img"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <!-- title -->

            <TextView
                android:id="@+id/re_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="编程的艺术"
                android:textColor="#ff333333"
                android:textSize="18.0sp" />
        </RelativeLayout>
        <!-- author -->

        <TextView
            android:id="@+id/re_author_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="作者：托马斯"
            android:textColor="#ff414951"
            android:textSize="14.0sp" />
        <!-- address -->

        <TextView
            android:id="@+id/re_addr_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="出版社：电子工业出版社"
            android:textColor="#ff414951"
            android:textSize="14.0sp" />
        <!-- time -->

        <TextView
            android:id="@+id/re_time_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="年份：2012-06"
            android:textColor="#ff414951"
            android:textSize="14.0sp" />
        <!-- time -->

        <TextView
            android:id="@+id/re_hot_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="页数："
            android:textColor="#ff414951"
            android:textSize="14.0sp" />
    </LinearLayout>
       <LinearLayout
        android:id="@+id/ll_abstract"
        android:visibility="gone"   
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_book_img"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_abst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff414951"
            android:maxLines="3"
            android:text=" " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_abstract"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_item_result_search_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="分享" />
    </LinearLayout>

</RelativeLayout>