<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/up_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/book_img"
            android:layout_width="54dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@android:color/transparent"
            android:saveEnabled="true"
            android:visibility="gone"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/lyRightLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:layout_toRightOf="@id/book_img"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/download_title"
				style="@style/TextTitleBlueStyle"               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/download_size"
                            style="@style/TextContentMiddleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            />

                        <TextView
                            android:id="@+id/download_precent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/download_size"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="precent" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/down_ll"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ProgressBar
                            android:id="@+id/download_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/download_tip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="正在下载..." />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/download_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:drawableTop="@drawable/icon_del"
                    android:focusable="false" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>