<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_list" >

    <ImageView
        android:id="@+id/book_big_img"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/defaut_book" />

    <ScrollView
        android:id="@+id/intro_sl"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_below="@+id/detail_book_title"
        android:fadeScrollbars="false" >

        <TextView
            android:id="@+id/intro_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:shadowColor="@android:color/white"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="图书简介"
            android:textSize="16dp" />
    </ScrollView>

    <ListView
        android:id="@+id/comment_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_sl"
        android:layout_centerHorizontal="true" >
    </ListView>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/comment_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请在这里输入评论"
            android:imeOptions="actionSend"
            android:maxLines="5"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/commit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交" />
    </LinearLayout>

    <include
        android:id="@+id/detail_book_title"
        layout="@layout/header" />

</RelativeLayout>