<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_list"
    tools:context=".PersonalCenterActivity" >

    <include
        android:id="@+id/readerserve_title"
        layout="@layout/header" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:src="@drawable/main_log_img" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/readerserve_title"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="9.0dip"
        android:paddingLeft="9.0dip"
        android:paddingRight="9.0dip"
        android:paddingTop="9.0dip" >

        <LinearLayout
            android:id="@+id/readerinfoLayout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/linearlayout_shape_top"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/serv_reader_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:src="@drawable/icon_center_info" />

            <TextView
                android:id="@+id/serv_reader_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/serv_readerinfo"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/eg_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favorLayout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="-1dp"
            android:background="@drawable/linearlayout_shape2"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/serv_favor_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:src="@drawable/icon_rating_important" />

            <TextView
                android:id="@+id/serv_favor_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/serv_favorite"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/eg_arrow" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/downloadLayout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="-1dp"
            android:gravity="center"
            android:background="@drawable/linearlayout_shape2"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/serv_download_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:src="@drawable/icon_collection_download" />

            <TextView
                android:id="@+id/serv_download_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/serv_download"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/eg_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoutLayout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="-1dp"
            android:background="@drawable/linearlayout_shape_down"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/serv_reader_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:src="@drawable/icon_center_loginout" />

            <TextView
                android:id="@+id/serv_logout_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/serv_logout"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/eg_arrow" />
        </LinearLayout>

    
    </LinearLayout>

  </RelativeLayout>
