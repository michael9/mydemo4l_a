<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_hdip"
    android:orientation="vertical"
    tools:context=".PersonalCenterActivity" >

    <include
        android:id="@+id/readerserve_title"
        layout="@layout/header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="9.0dip"
        android:paddingLeft="9.0dip"
        android:paddingRight="9.0dip"
        android:paddingTop="9.0dip" >

        <LinearLayout android:background="@drawable/linearlayout_shape_top"
            android:id="@+id/readerinfoLayout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/serv_reader_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:src="@drawable/guide_safe_icon" />

            <TextView
                android:id="@+id/serv_reader_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/serv_readerinfo"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/eg_arrow" />
        </LinearLayout>
		 <LinearLayout android:layout_marginTop="-1dp"
            android:background="@drawable/linearlayout_shape2"
            android:id="@+id/favorLayout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/serv_favor_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:src="@drawable/guide_safe_icon" />

            <TextView
                android:id="@+id/serv_favor_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/serv_favorite"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/eg_arrow" />
        </LinearLayout>
        <LinearLayout android:layout_marginTop="-1dp"
            android:background="@drawable/linearlayout_shape2"
            android:id="@+id/attentionLayout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/serv_attention_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:src="@drawable/guide_safe_icon" />

            <TextView
                android:id="@+id/serv_attention_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/serv_myattention"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/eg_arrow" />
        </LinearLayout>
		 <LinearLayout android:layout_marginTop="-1dp"
            android:background="@drawable/linearlayout_shape2"
            android:id="@+id/attentionLayout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/serv_order_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:src="@drawable/guide_safe_icon" />

            <TextView
                android:id="@+id/serv_order_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/serv_bookorder"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/eg_arrow" />
        </LinearLayout>
        <LinearLayout android:layout_marginTop="-1dp"
            android:background="@drawable/linearlayout_shape2"
            android:id="@+id/myreadLayout"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/serv_myread_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:src="@drawable/guide_safe_icon" />

            <TextView
                android:id="@+id/serv_myread_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/serv_myintroduceread"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/eg_arrow" />
        </LinearLayout>

        <LinearLayout android:layout_marginTop="-1dp"
            android:background="@drawable/linearlayout_shape2"
            android:id="@+id/mybyLayout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/serv_mybuy_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:src="@drawable/guide_safe_icon" />

            <TextView
                android:id="@+id/serv_mybuy_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/serv_myintroducebuy"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/eg_arrow" />
        </LinearLayout>

        <LinearLayout android:layout_marginTop="-1dp"
            android:background="@drawable/linearlayout_shape_down"
            android:id="@+id/serverLayout"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/serv_myquestion_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:src="@drawable/guide_safe_icon" />

            <TextView
                android:id="@+id/serv_myquestion_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/serv_myquestion"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/eg_arrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>