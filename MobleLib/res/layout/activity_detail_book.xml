<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
  
    tools:context=".DetailBookActivity" >
    <RelativeLayout
           android:layout_width="match_parent"
    android:layout_height="match_parent"
         >
	  <ImageView
        android:id="@+id/book_big_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/eg_book" />
    <TextView
        android:layout_below="@+id/book_big_img"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="基本信息" />

    <TextView
        android:id="@+id/bookinfo_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:textSize="16sp"
        android:text="" />

    <TextView
        android:id="@+id/textView9"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookinfo_txt"
        android:text="馆藏信息" />

    <TextView
        android:id="@+id/loc_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:textSize="16sp"
        android:text="" />

  </RelativeLayout>

</ScrollView>
