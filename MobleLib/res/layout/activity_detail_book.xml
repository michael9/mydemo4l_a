<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_list" >

    <include
        android:id="@+id/head_bar"
        layout="@layout/header" />

    <ImageView
        android:id="@+id/book_big_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/head_bar"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:padding="2dp"
        android:src="@drawable/defaut_book" />

    <TextView
        android:id="@+id/booktitle_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_bar"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/book_big_img"
        android:text="title"
        android:textSize="18sp" android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/booktitle_tv"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/book_big_img"
        android:text="base"
        android:textSize="@dimen/search_detail_txtsize_tv" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="图书简介"
        android:textSize="@dimen/search_detail_txtsize_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_item_result_search_great"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:focusable="false"
            android:text="赞"
            android:textColor="@color/green_light"
            android:textSize="@dimen/search_detail_txtsize_btn"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_item_result_search_buzz"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:focusable="false"
            android:text="评"
            android:textColor="@color/green_light"
            android:textSize="@dimen/search_detail_txtsize_btn" />

        <Button
            android:id="@+id/btn_item_result_search_collect"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:focusable="false"
            android:text="收藏"
            android:textColor="@color/green_light"
            android:textSize="@dimen/search_detail_txtsize_btn" />

        <Button
            android:id="@+id/btn_item_result_search_share"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:focusable="false"
            android:text="分享"
            android:textColor="@color/green_light"
            android:textSize="@dimen/search_detail_txtsize_btn"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="20dp"
        android:text="馆藏信息"
        android:textSize="16dp" />

    <ListView
        android:id="@+id/loc_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView9"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:fadingEdgeLength="0.0sp"
        android:headerDividersEnabled="false"
        android:listSelector="@android:color/transparent"
        android:scrollingCache="false"
        android:smoothScrollbar="false" />

    <!--  -->

</RelativeLayout>