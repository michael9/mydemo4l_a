<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg_list">
    
     

    <ImageView
        android:id="@+id/book_big_img"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/defaut_book" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/book_big_img"
        android:shadowColor="@android:color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="图书简介"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_big_img"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_item_result_search_great"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:focusable="false"
            android:text="赞" />

        <Button
            android:id="@+id/btn_item_result_search_buzz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:focusable="false"
            android:text="评" />

        <Button
            android:id="@+id/btn_item_result_search_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:focusable="false"
            android:text="收藏" />

        <Button
            android:id="@+id/btn_item_result_search_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:focusable="false"
            android:text="分享" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_big_img"
        android:layout_marginTop="15dp"
        android:text="馆藏信息" />

    <ListView
        android:id="@+id/loc_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView9"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:fadingEdgeLength="0.0sp"
        android:headerDividersEnabled="false"
        android:listSelector="@android:color/transparent"
        android:scrollingCache="false"
        android:smoothScrollbar="false" />

    <!--  -->
<include android:id="@+id/detail_book_title" layout="@layout/header" />
</RelativeLayout>