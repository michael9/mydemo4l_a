<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dlistView="http://schemas.android.com/apk/res/com.cqvip.moblelib.szy"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_list"
    tools:context=".ResultOnSearchActivity" >

    <include
        android:id="@+id/head_bar"
        layout="@layout/header" />

    <LinearLayout
        android:id="@+id/searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_bar"
        android:layout_marginTop="1dp"
        android:background="@drawable/search_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/search_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入关键词搜索"
            android:imeOptions="actionSearch"
            android:maxLines="2"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/search_seach_btn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="1.0dip"
            android:background="@drawable/btn_selector_sreach" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_total_esearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchbar"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jiansuo_count" />

        <TextView
            android:id="@+id/txt_total_esearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="11"
            android:textColor="@color/serchcount_txtcolor"
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>

    <com.cqvip.moblelib.view.DropDownListView
        android:id="@+id/search_res_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_total_esearch"
        android:layout_marginBottom="12dp"
        android:background="@drawable/text_bck"
        android:divider="@drawable/xuxian"
        dlistView:isAutoLoadOnBottom="true"
        dlistView:isOnBottomStyle="true" />

    <RelativeLayout
        android:id="@+id/noresult_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/noresult_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/defaut_book" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noresult_img"
            android:gravity="center"
            android:text="没有找到相关结果\n试试别的关键字吧!"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>


</RelativeLayout>