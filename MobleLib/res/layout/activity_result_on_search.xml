<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dlistView="http://schemas.android.com/apk/res/com.cqvip.moblelib.szy"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_list"
    tools:context=".ResultOnSearchActivity" >

    <include
        android:id="@+id/head_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <include
        android:id="@+id/searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_bar"
        layout="@layout/search_bar" />

   <LinearLayout
        android:id="@+id/ll_total_esearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchbar"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jiansuo_count" />

        <TextView
            android:id="@+id/txt_total_esearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="11"
            android:textColor="@color/serchcount_txtcolor"
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>

    <com.cqvip.moblelib.view.DropDownListView
        android:id="@+id/search_res_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_total_esearch"
        android:layout_marginBottom="12dp"
        android:background="@drawable/text_bck"
        android:divider="@drawable/xuxian"
        dlistView:isAutoLoadOnBottom="true"
        dlistView:isOnBottomStyle="true" />

    <RelativeLayout
        android:id="@+id/noresult_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/noresult_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/defaut_book" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noresult_img"
            android:gravity="center"
            android:text="没有找到相关结果\n试试别的关键字吧!"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>

</RelativeLayout>