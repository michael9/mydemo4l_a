<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout  
    android:tag="itemview" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
  <!--图书-->

    <ImageView
        android:id="@+id/re_book_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lyRightLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="5.0dip"
        android:src="@drawable/defaut_book" />

     <LinearLayout android:layout_toRightOf="@+id/re_book_img"  android:orientation="vertical" android:id="@+id/lyRightLayout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="5.0dip" >
        <RelativeLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" >
        	 <!--title-->
            <TextView android:textSize="18.0sp" 
                android:singleLine="true"   
                android:textColor="#ff333333" 
                android:id="@+id/br_title_txt" 
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="编程的艺术" />
            
        </RelativeLayout>
        <!--author-->
        <TextView android:textSize="14.0sp" android:textColor="#ff414951" android:id="@+id/br_code_txt" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5.0dip" android:text="条码号：04400696055125" />
        <!--author-->
        <TextView android:textSize="14.0sp" android:textColor="#ff414951" android:id="@+id/br_callno_txt" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:text="索书号：I712.8/B219/2012" />
       <!--address-->
        <TextView android:textSize="14.0sp" android:textColor="#ff414951" android:id="@+id/br_price_txt" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:text="价格：￥54" />
        <!--time-->
        <TextView android:textSize="14.0sp" android:textColor="#ff414951" android:id="@+id/br_brtime_txt" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:text="借书日期：20120504"  />
        <!--time-->
		 <TextView android:textSize="14.0sp" 
            android:textColor="#ff414951" 
            android:id="@+id/br_retime_txt" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"  
            android:text="还书日期：20120623" />
      
    </LinearLayout>
      <RelativeLayout android:id="@+id/re_under_rl"
           android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/re_book_img"
             android:layout_marginTop="5.0dip"
             android:layout_marginLeft="5.0dip"
              android:layout_marginBottom="5.0dip" >




            <TextView android:textSize="16.0sp" 
                    android:text="@string/item_renew"
					 android:id="@+id/re_share_txt" 
					 android:layout_width="wrap_content" 
					 android:layout_height="wrap_content" 
					 android:layout_marginRight="5.0dip"  
					 android:layout_alignParentRight="true"
					 
					 />
        </RelativeLayout>
     
     
</RelativeLayout> 